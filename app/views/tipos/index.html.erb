<h1>Lista de Tipos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Sigla</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tipos.each do |tipo| %>
  <tr>
    <td><%= tipo.nombre %></td>
    <td><%= tipo.sigla %></td>
    <td><%= link_to 'Mostrar', tipo %></td>
    <td><%= link_to 'Editar', edit_tipo_path(tipo) %></td>
    <td><%= link_to 'Eliminar', tipo, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo', new_tipo_path %>
